CC=emcc

CFLAGS=-I.  -I ../../vcglib/  -s TOTAL_MEMORY=536870912 -s PRECISE_F32=1 -s DEMANGLE_SUPPORT=1 -O3  --bind

OBJ = Color.bc Measure.bc Decorator.bc CppMesh.bc Meshing.bc Sampling.bc Create.bc Refine.bc Smooth.bc Saver.bc Selection.bc ../../vcglib/wrap/ply/plylib.bc

%.bc: %.cpp
	$(CC) -o $@ $< $(CFLAGS)

MeshLabCppCore.js: $(OBJ)
	$(CC) -o $@ $^ $(CFLAGS)


clean:
	rm -f *.bc MeshlabGenJs.js

install:
	mv MeshLabCppCore.js MeshLabCppCore.js.mem ../js/generated
